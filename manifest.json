{
  "name": "Playlist Duration",
  "version": "1.0",
  "description": "Calculate Youtube Playlist Duration",
  "manifest_version": 2,
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://www.youtube.com/playlist*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "https://www.youtube.com/playlist*"
  ]
}